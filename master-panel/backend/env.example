# Database
DATABASE_URL="postgresql://embarcacoes:embarcacoes123@localhost:5432/embarcacoes_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="8h"

# Server
PORT=3002
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3001"
CORS_ORIGIN="http://localhost:3001"

# Master Panel
MASTER_PANEL_URL="http://localhost:3001"
MASTER_PANEL_DOMAIN="master.reservapro.com"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 2FA
TOTP_ISSUER="ReservaPro Master"
TOTP_ALGORITHM="sha1"
TOTP_DIGITS=6
TOTP_PERIOD=30

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/master-panel.log"

# Email (opcional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="master@reservapro.com"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30








